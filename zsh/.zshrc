# Aliases
alias ls='ls --color'
alias la='tree -a -C -I .git'
alias l="eza -l --icons --git -a"
alias lt="eza --tree --level=2 --long --icons --git"

# Shell integrations
source <(docker completion zsh)

source <(fzf --zsh)

eval "$(zoxide init zsh)"

eval "$($(brew --prefix)/bin/mise activate zsh)"
